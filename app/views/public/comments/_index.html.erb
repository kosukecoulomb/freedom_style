<% coordinate.comments.each do |comment| %>
<table class="table">
  <tr>
    <td class="col-2">
      <%= link_to user_path(comment.user) do %>
        <%= image_tag comment.user.get_profile_image(50,50) %>
      <% end %>
      <%= comment.user.name %>
    </td>
    <td class="col-md-8"><%= comment.comment %></td>
    <td class="col-md-2">
    <% if comment.user == current_user || comment.coordinate.user == current_user %>
      <%= link_to "削除", coordinate_comment_path(comment.coordinate, comment), method: :delete, remote: true, class: "btn btn-outline-danger" %>
    <% end %>
    </td>
    <td>
      <%= link_to coordinate_comment_reports_path(coordinate,comment), method: :post, data: { confirm: '本当に管理者に通報しますか？' } do %>
        <i class="fas fa-times"></i>
      <% end %>
    </td>
  </tr>
</table>
<% end %>