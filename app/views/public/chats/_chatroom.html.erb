<table class="chat table table-borderless">
  <% chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
      <tr>
        <td class="col-md-5 float-left"><p class="chat-left text-center"><%= chat.message %></p></td>
        <td class="col-md-5"></td>
        <td class="col-md-2"></td>
      </tr>
    <% else %>
      <tr>
        <td></td>
        <td class="float-right"><p class="chat-right text-center"><%= chat.message %></p></td>
        <td><%= image_tag chat.user.get_profile_image(50,50), class: "float-left rounded-circle" %><%= chat.user.name %></td>
      </tr>
    <% end %>
  <% end %>
</table>