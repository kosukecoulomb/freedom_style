<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3><%= @user.name %>さんのコレクション</h3>

      <h5 class="mt-3">アウター</h5>
      <div class="d-flex flex-wrap">
        <div class="row no-padding card-wrapper">
          <% if @user.items.outer.present? %>
            <% @user.items.outer.each do |item| %>
              <div class="coordinate_image">
                <div class="card shadow-lg">
                  <%= link_to item_path(item) do %>
                    <%= image_tag item.get_item_image(200,200), class: "card-img-top img-thumbnail" %>
                    <div class="mask">
                      <div class="caption"><%= item.item_name %></div>
                  	</div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p>--登録したコレクションはありません--</p>
          <% end %>
        </div>
      </div>
      
