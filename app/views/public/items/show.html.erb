<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h2><%= @item.item_name %></h2>

      <div class="row no-padding card-wrapper mx-auto">
        <div class="card shadow-lg" style="width: 60rem;">
          <div class='row g-0'>

            <div class="col-md-7">
              <%= image_tag @item.item_image, class: "card-img-top" %>
            </div>

            <div class="col-md-5">
              <div class="card-body justify-content-center">
                <h5 class="pb-2">アイテム情報</h5>
                <table class="table table no-borderless">
                  <tr>
                    <th>ブランド:</th>
                    <td><%= @item.brand_name %></td>
                  </tr>
                  <tr>
                    <th>サイズ: </th>
                    <td><%= @item.size %></td>
                  </tr>
                  <tr>
                    <th>サイズ: </th>
                    <td><%= @item.color %></td>
                  </tr>
                  <tr>
                    <th>価格: </th>
                    <td>¥<%= @item.price.to_s(:delimited) %></td>
                  </tr>
                </table>
                <h5 class="mt-5">投稿者</h5>
                <%= link_to user_path(@item.user.id) do %>
                  <%= image_tag @item.user.get_profile_image(80,100), class: "rounded-circle img-thumbnail" %>
                <% end %>
                <%= @item.user.name %>
                <div>
                  <%= link_to "コレクションを見る", collection_item_path(@item.user), class: "btn btn-outline-success m-1" %>
                  <% if @item.user_id == current_user.id %>
                    <%= link_to "アイテム情報を編集", edit_item_path(@item), class: "btn btn-outline-info m-1" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <h4 class="mt-4">このアイテムを使った投稿</h4>
      <% if @coordinates.present? %>
        <%= render "layouts/coordinates", coordinates: @coordinates %>
      <% else %>
        <P>--該当する投稿はありません--</P>
      <% end %>

    </div>
  </div>
</div>