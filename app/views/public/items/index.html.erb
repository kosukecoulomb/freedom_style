<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="mt-3">アイテム一覧</h4>
      
      <!-- 条件検索 -->
      <%= form_with(scope: :search, url: items_path, method: :get) do |f| %>
        <%= f.select :category, Item.categories.keys.map{|k| [I18n.t("enums.item.category.#{k}"), k]}, { include_blank: 'カテゴリー'}, value: @search_params[:dress_code] %>
        <%= f.text_field :item_name, value: @search_params[:item_name] %>
        <%= submit_tag '検索', class: "button" %>
      <% end %>
      
      <div class="row card-group">
        <% @items.each do |item| %>
          <div class="coordinate_image">
            <div class="card"  style="width: 10rem;">
              <%= link_to item_path(item) do %>
                <%= image_tag item.get_item_image(200,400), class: "card-img-top" %>
                  <div class="mask">
                    <div class="caption"><%= item.item_name %></div>
                	</div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>