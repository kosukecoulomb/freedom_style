<div class="row no-padding card-group">
<% users.each do |user| %>

  <%= link_to user_path(user) do %>

    <div class="card shadow-lg m-2" style="width: 30rem; height: 20rem;">
      <div class="d-flex card-header">
        <%= image_tag user.get_profile_image(80,80) %>
        <div class="d-block ml-5">
          <h5 class="card-title"><%= user.name %></h5>
          <p class="card-text"><%= user.tall %>cm|<%= user.followers.count %>フォロワー</p>
        </div>
      </div>
      <div class="card-body">
        <% user.coordinates.limit(3).order(created_at: :desc).each do |coordinate| %>
          <%= image_tag coordinate.get_coordinate_image(150,300), class: "img-fluid" %>
        <% end %>
      </div>
    </div>

  <% end %>

<% end %>
</div>
