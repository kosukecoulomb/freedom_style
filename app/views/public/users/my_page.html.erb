<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mb-3">マイページ</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <h4><%= @user.name %>さんの基本データ</h4>
      <%= image_tag @user.get_profile_image(80,100) %>
      <% if @user.name != "guestuser" %>
        <%= link_to "登録情報を編集する", edit_profile_path(@user), class: "btn btn-outline-info" %>
      <% end %>
      <table class="table mb-5">
        <tr>
          <th>年齢</th>
          <td><%= @user.generation_i18n %></td>
        </tr>
        <tr>
          <th>身長</th>
          <td><%= @user.tall %>cm</td>
        </tr>
        <tr>
          <th>体型</th>
          <td><%= @user.body_shape_i18n %></td>
        </tr>
        <tr>
          <th>足のサイズ</th>
          <td><%= @user.foot_size %>cm</td>
        </tr>
      </table>
      <h4>コレクション</h4>
      <%= link_to "登録したアイテムの一覧を見る", items_path, class: "btn btn-outline-success" %>

      <h4 class="mt-5">新しい投稿をする</h4>
      <%= link_to "コーディネート", new_coordinate_path, class: "btn btn-outline-success" %>
      <%= link_to "コレクション", new_item_path, class: "btn btn-outline-success" %>
    </div>

    <div class="col-md-9">
      <h4><%= @user.name %>さんに似たユーザーの投稿</h4>
      <% if @similar_coordinates.present? %>
        <%= render "layouts/coordinates", coordinates: @similar_coordinates %>
      <% else %>
        <P>該当する投稿はありません</P>
      <% end %>
      <%= link_to "みんなの投稿からコーデを探す", coordinates_path %>

      <h4 class="mt-5">いいねした投稿</h4>
      <% if @favorite_coordinates.present? %>
        <%= render "layouts/coordinates", coordinates: @favorite_coordinates %>
        <%= link_to "いいねした全アイテムを見る", favorites_path(@user) %>
      <% else %>
        <P>該当する投稿はありません</P>
      <% end %>

      <h4 class="mt-5">あなたの投稿</h4>
      <% if @coordinates.present? %>
        <%= render "layouts/coordinates", coordinates: @coordinates %>
      <% else %>
        <P>該当する投稿はありません</P>
      <% end %>
    </div>
  </div>
</div>
