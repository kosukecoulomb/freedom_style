<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h2><%= @coordinate.title %></h2>

      <div class="row no-padding card-wrapper mx-auto">
        <div class="card shadow-lg" style="width: 60rem;">
          <div class='row g-0'>

            <div class="col-md-7">
              <%= image_tag @coordinate.coordinate_image, class: "card-img-top" %>
              
              <h5>使用アイテム</h5>
              <% if @outer_item != nil %>
                <%= image_tag @outer_item.get_item_image(20,30) %>
                <%= @outer_item.item_name %>
              <% end %>

              
              <div class="mt-2">
                <%= form_with model: [@coordinate, @comment], local: false do |f| %>
                  <%= f.text_area :comment, size: "30x5", placeholder: "コメントをここに" %>
                  <%= f.submit "送信する", class: "btn btn-outline-success" %>
                <% end %>
              </div>
            </div>

            <div class="col-md-5">
              <div class="card-body justify-content-center">
                <h5 class="pb-2">コーディネート情報</h5>
                <table class="table table no-borderless">
                  <tr>
                    <th>シーン:</th>
                    <td><%= @coordinate.dress_code_i18n %></td>
                  </tr>
                  <tr>
                    <th>季節: </th>
                    <td><%= @coordinate.season_i18n %></td>
                  </tr>
                  <tr>
                    <th>気温: </th>
                    <td><%= @coordinate.temperature_i18n %></td>
                  </tr>
                </table>
                <%= @coordinate.body %>

                <h5 class="mt-5">投稿者情報</h5>
                <table class="table mb-5">
                  <%= link_to "プロフィールへ", user_path(@user.id) %>
                  <tr>
                    <th>名前:</th>
                    <td><%= @user.name %></td>
                  </tr>
                  <tr>
                    <th>年齢:</th>
                    <td><%= @user.generation_i18n %></td>
                  </tr>
                  <tr>
                    <th>身長:</th>
                    <td><%= @user.tall %>cm</td>
                  </tr>
                  <tr>
                    <th>体型:</th>
                    <td><%= @user.body_shape_i18n %></td>
                  </tr>
                </table>

                

                <% if user_signed_in? %>
                  <% if current_user.id == @coordinate.user_id %>
                    <%= link_to "投稿を編集する", edit_coordinate_path(@coordinate), class: "btn btn-outline-primary" %>
                  <% end %>
                <% end %>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <!-- 非同期通信 -->
    <div class="col-md-12" id="coordinate_<%= @coordinate.id %>" >
      <h4 class="mt-3">みんなの反応</h4>
      
      <!-- いいね機能 -->
      <div class="favorite_btn">
        <%= render "public/favorites/favorite_btn", coordinate: @coordinate %>
      </div>
      
      <!-- コメント機能 -->
      <div class="comments-count">
        <p>コメント件数：<%= @coordinate.comments.count %></p>
      </div>

      <div class="coordinate_comments">
        <%= render "public/comments/index", coordinate: @coordinate %>
      </div>

    </div>

  </div>
</div>
