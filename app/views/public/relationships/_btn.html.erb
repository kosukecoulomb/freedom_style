<% if user.is_followed_by?(current_user) %>
  <%= link_to "フォロー解除", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-secondary btn-sm" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "btn btn-dark btn-sm" %>
<% end %>