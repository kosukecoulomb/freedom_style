<% if coordinate.favorited_by?(current_user) %>
  <p>
    <%= link_to coordinate_favorites_path(coordinate), method: :delete, remote: true do %>
      <i class="fas fa-heart heart"></i>
    <% end %>
     <%= coordinate.favorites.count %>いいね
  </p>
  <% else %>
  <p>
    <%= link_to coordinate_favorites_path(coordinate), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
    <% end %>
    <%= coordinate.favorites.count %>いいね
  </p>
<% end %>